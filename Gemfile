  gem 'dalli'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development  do
  gem 'rspec-rails'
  gem 'pry'
  gem 'pry-remote'
  gem 'pry-nav'
  gem 'rack-mini-profiler'
  gem 'sqlite3'
  gem "capybara"
  gem "launchy"
end

