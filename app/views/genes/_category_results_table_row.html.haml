%tr
  %td
    =category_results_table_row.display_search_term
  %td{title: category_results_table_row.gene_name + ' - ' + category_results_table_row.gene_display_name}
    = link_to gene_path(category_results_table_row.gene_name) do
      %strong
        = category_results_table_row.gene_name
      = " - "
      %em
        %small{class: "truncate"}
          =category_results_table_row.gene_display_name
  %td
    =link_to category_results_table_row.gene_category, gene_by_category_path(category_results_table_row.gene_category, sources: params[:sources])
  %td
    =category_results_table_row.sources(self)
