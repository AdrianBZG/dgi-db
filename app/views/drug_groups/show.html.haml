=content_for :title, @title
=content_for :header do
  %h2
    %span{id: "drug_name"}
      =@title
    %small drug summary page

.container-fluid
  .row-fluid#container
    =render partial: 'drug_groups/drug_group', locals:{drug_group: @drug_group}
  .row-fluid
    .hero-unit
      %h3 Similarly Named Drugs
      %span{id: "related_drugs"}

=javascript_include_tag "jquery.masonry.min"
=javascript_include_tag "mason_items"
=javascript_include_tag "jquery.dataTables.min"
=javascript_include_tag "pagination_bootstrap"
=javascript_include_tag "gene_groups"
=javascript_include_tag "related_drugs"
=stylesheet_link_tag "color_drugs"
