=content_for :title, @title
=content_for :header do
  %h2
    Druggable Gene Categories
    %small
      select gene categories
      %i.icon-flag.tip(title="Categories are groups of genes considered by some to be potentially druggable targets.")

#container.container-fluid
  -@categories.each do |category|
    .item(style="width:400")
      .well
        %h4=link_to "#{category.category_value} (#{category.count})", gene_group_by_category_path(category.category_value)

=javascript_include_tag "jquery.masonry.min"
=javascript_include_tag "mason_items"

