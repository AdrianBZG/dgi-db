%html
  %head
    %title=h yield(:title)
    =stylesheet_link_tag    "application", :media => "all"
    =javascript_include_tag "application"
    =csrf_meta_tags
  %body
    .container-fluid
      .navbar.navbar-fixed-top
        .navbar-inner
          %a.brand(href="/") The Drug-Gene Interactions Database
          %ul.nav
            %li{class: @search_active}
              %a(href="/search") Search
            %li{class: @search_interactions_active}
              %a(href="/search_interactions") Search Interactions
            %li{class: @search_categories_active}
              %a(href="/search_categories") Search Druggable Gene Categories
            %li{class: @druggable_gene_categories_active}
              %a(href="/druggable_gene_categories") Druggable Gene Categories
          %ul.nav.pull-right
            %li.divider-vertical
            %li.dropdown{class: @help_active}
              %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
                Help 
                %b.caret
              %ul.dropdown-menu
                %li
                  %a(href="/getting_started") Getting Started
                  %a(href="/faq") FAQ
                  %a(href="/sources") Sources
                  %a(href="/downloads") Downloads
                  %a(href="/contact") Contact
    .container-fluid
      .page-header
        =h yield(:header)
    .container-fluid
      - flash.each do |key, val|
        = content_tag :div, (content_tag :h3, val), class: "alert alert-#{key}"
    =yield
