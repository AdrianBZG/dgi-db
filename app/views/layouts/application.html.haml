%html
  %head
    %title=h yield(:title)
    =stylesheet_link_tag    "application", :media => "all"
    =javascript_include_tag "application"
    =csrf_meta_tags
  %body
    .navbar.navbar-inner.container-fluid
      %a.brand(href="/") The Drug-Gene Interactions Database
      %ul.nav
        %li{class: @search_interactions_active}
          %a(href="/search_interactions") Search Interactions
        %li{class: @search_families_active}
          %a(href="/search_families") Search Families
        %li{class: @families_active}
          %a(href="/families") Gene Families
        %li{class: @about_active}
          %a(href="/about") About
        %li{class: @contact_active}
          %a(href="/contact") Contact
    .container-fluid
      - flash.each do |key, val|
        = content_tag :div, (content_tag :h3, val), class: "alert alert-#{key}"
    =yield
