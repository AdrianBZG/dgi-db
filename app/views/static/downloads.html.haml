#notice= notice
=content_for :title do
  =tx "title"
=content_for :header do
  %h2
    =tx "title_main"
    %small=tx "title_small"
-cache do
  .container-fluid
    .row-fluid
      .span12
        .well=tx "description"
        .well
          %dl
            -to("downloads").each do |d|
              -if d["link"].nil?
                %dt=d["title"]
              -else
                %dt=dynamic_link_to(d["title"], d["link"])
              %dd=d["description"].html_safe
              %br
